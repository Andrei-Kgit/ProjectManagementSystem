<Window x:Class="ProjectManagementSystem.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementSystem"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <Border MinWidth="400" MaxWidth="500" Background="White" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Регистрация" FontSize="26"/>

                <TextBlock Text="Логин" Margin="0 15 0 0"/>
                <TextBox x:Name="LoginTextBox"  Margin="0 5 0 0"/>

                <TextBlock Text="Пароль" Margin="0 15 0 0"/>
                <PasswordBox x:Name="PasswordTextBox" Margin="0 5 0 0"/>

                <Button Content="Зарегистрироваться" Margin="0 10 0 10" Height="30" Click="Registration"/>
            </StackPanel>
        </Border>
        <Button x:Name="testButton" Content="Button" HorizontalAlignment="Left" Margin="710,335,0,0" VerticalAlignment="Top" Click="ShowTasksWindow"/>

    </Grid>
</Window>
