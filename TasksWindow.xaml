<Window x:Class="ProjectManagementSystem.TasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementSystem"
        mc:Ignorable="d"
        Title="TasksWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="UserNameTextBox" Text="User" VerticalAlignment="Top" HorizontalAlignment="Right" FontSize="12" MaxWidth="200"/>
        <DataGrid x:Name="TaskGrid" Margin="5 20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProjectID"/>
                <DataGridTextColumn Header="TaskName"/>
                <DataGridTextColumn Header="Description"/>
                <DataGridComboBoxColumn Header="TaskState"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
